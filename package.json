  "description": "A Javascript library for formatting number to a friendly number",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "semantic-release": "semantic-release",
