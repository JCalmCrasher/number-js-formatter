    "javascript",
    "ts",
    "typescript",
    "format",
    "number-format",
    "friendly-format",
    "number"
  ],
  "author": {
    "name": "Joshua Osagie",
    "email": "joshua.osagie@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JCalmCrasher/number-js-formatter.git"
  },
  "devDependencies": {
    "@types/jest": "27.4.1",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "prettier": "2.6.0",
    "semantic-release": "^19.0.2",
    "ts-jest": "27.1.3"
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.js": "eslint --cache --fix",
    "*.ts": "eslint --cache --fix"
  }
